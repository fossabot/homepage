div.search-form
	flex-grow: 1
	display: flex
	flex-direction: column
	justify-content: center
	form
		text-align: center
		label
			display: block
			line-height: 3rem
			letter-spacing: .0625rem
		input[type="text"]
			font-size: 2rem
			width: 64rem
			max-width: 90vw
			border: none
			padding: .5rem
			background: base07
			color: base00
			margin-bottom: 3rem
			&:focus
				border: none
				outline: none
